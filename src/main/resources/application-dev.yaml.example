# Development Configuration Example
# Copy this file to application-dev.yaml and fill in your actual values
# application-dev.yaml is in .gitignore and will not be committed

# Database Configuration
spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/cloud_storage_api
    username: storage_user
    password: your_password_here
    driver-class-name: org.postgresql.Driver
    hikari:
      maximum-pool-size: 20
      minimum-idle: 5
      connection-timeout: 30000
      idle-timeout: 600000
      max-lifetime: 1800000

  jpa:
    show-sql: true

# Cloudinary Configuration
cloudinary:
  cloud-name: your_cloud_name
  api-key: your_api_key
  api-secret: your_api_secret
  secure: true
  folder: user-files

# Security Configuration (for Phase 5)
app:
  security:
    jwt:
      secret: your-secret-key-change-in-production
      access-token-expiration-cli: 2592000000 # 30 days
      access-token-expiration-web: 900000 # 15 minutes
      refresh-token-expiration-cli: 7776000000 # 90 days
      refresh-token-expiration-web: 604800000 # 7 days
    api-key:
      header-name: X-API-Key
      length: 32
    password:
      encoding:
        algorithm: bcrypt
        strength: 10
    cors:
      allowed-origins:
        - http://localhost:3000
        - http://localhost:8080
      allowed-methods:
        - GET
        - POST
        - PUT
        - DELETE
        - OPTIONS
      allowed-headers:
        - "*"
      allow-credentials: true
      max-age: 3600

  # Rate Limiting Configuration (for Phase 5)
  rate-limit:
    enabled: true
    requests-per-minute: 100
    requests-per-hour: 5000
    requests-per-day: 50000
    strategy: per-api-key

